<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>
    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ab</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
    </style>



    <style name="custom_dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="panelBackground">@color/white</item>
        <item name="dialogCornerRadius">25dp</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
   <item name="android:color">@color/red</item>
        <item name="android:checkboxStyle">@color/red</item>

    </style>


    <style name="formDropDown">
<!--        <item name="android:paddingRight">20dp</item>-->
