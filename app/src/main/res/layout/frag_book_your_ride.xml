<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">




    <LinearLayout
        android:id="@+id/edit"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hospital"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/green_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/green_dot"/>

                    <com.MedAmbulance.Widget.Atami_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="@string/pickup"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/pickupcolor"/>

                </LinearLayout>
                <EditText
                    android:id="@+id/source_location"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#ffffff"
                    android:ems="10"

                    android:inputType="textPersonName"


                    android:textColor="#7e7e7f"


                    android:padding="5dp"
                    android:layout_marginLeft="19dp"
                    android:textSize="12dp"
                    android:layout_marginRight="14dp"


                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit2"
        android:layout_below="@id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="56dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/red_dot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/red_dot"/>

                    <com.MedAmbulance.Widget.Atami_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/drop"
                        android:textSize="14dp"
                        android:textColor="@color/dropcolor"/>

                </LinearLayout>
                <EditText
                    android:id="@+id/destination_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="#7e7e7f"
                    android:padding="5dp"
                    android:layout_marginLeft="19dp"
                    android:textSize="12dp"
                    android:layout_marginRight="14dp">

                </EditText>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/edit2"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/ambulance"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/car" />


    <LinearLayout
        android:id="@+id/btnBookNow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="198dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>


        <Button
            android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/filedHeight"
            android:layout_marginLeft="@dimen/leftMergin"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/RightMergin"
            android:background="@drawable/button_border"
            android:backgroundTint="@color/red"
            android:text="@string/Book"
            android:textAllCaps="false"
            android:textColor="@color/white">

        </Button>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/driver_details"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:background="#a3a3a3">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_call"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CALL DRIVER"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="146dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/share" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SHARE DETAILS"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cancelride" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CANCEL RIDE"
                    android:textAlignment="center"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_above="@id/linearLayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="182dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cab_no_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PB01A"
                    android:textAlignment="textStart"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/cab_no_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="9759"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amandeep Singh"
                    android:textAlignment="viewEnd"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ride_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OTP : 4271"
                    android:textAlignment="viewEnd"
                    android:textColor="#000000"
                    android:textSize="25dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Fare"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ride_fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs. 20"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>