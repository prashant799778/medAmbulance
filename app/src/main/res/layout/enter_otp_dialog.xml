<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        android:layout_marginTop="13dp"
        android:layout_margin="16dp"
        android:paddingBottom="27dp">

            <com.example.drivermedambulance.Widget.Atami_Bold
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:text="@string/enter"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:textSize="24dp"
                />
        <com.example.drivermedambulance.Widget.OtpEditText
            android:layout_below="@+id/user_name"
            android:id="@+id/enter_otp_to_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:layout_marginLeft="28.5dp"
            android:layout_marginRight="28.5dp"
            android:maxLength="6"
            android:textIsSelectable="false"
            android:textSize="20sp"/>
        <View
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/RightMergin"
            android:background="@color/color"
            android:layout_height="1dp">
        </View>


        <RelativeLayout
            android:layout_below="@+id/enter_otp_to_start"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/pickup_bbk"
                android:gravity="center">

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/start"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_marginLeft="18dp"
                    />

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>