<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.End_Ride_Activity">
    <RelativeLayout
        android:id="@+id/tool_rel"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="54dp">
        <ImageView
            android:id="@+id/move_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/move_back"
            android:padding="15dp"
            android:layout_marginLeft="10dp"/>
        <com.example.drivermedambulance.Widget.Atami_Regular
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:text="@string/Details"
            android:textColor="@color/black2"
            android:textSize="18dp"/>



    </RelativeLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/tool_rel"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_below="@+id/tool_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/accept_decline_layout"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_margin="16dp"
                android:paddingBottom="27dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile_pic"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/circular_layout"
                    android:layout_centerHorizontal="true"/>

                <com.example.drivermedambulance.Widget.Atami_Bold
                    android:id="@+id/user_name"
                    android:layout_below="@+id/user_profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/terms"
                    android:text="UserName"
                    android:layout_marginTop="7dp"
                    android:textSize="17dp"
                    android:layout_marginBottom="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="18dp"
                    />
                <LinearLayout
                    android:id="@+id/red_line"
                    android:layout_below="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="2.5dp"
                    android:visibility="gone"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/agreed">

                    <LinearLayout
                        android:layout_width="45dp"
                        android:background="@color/red"
                        android:layout_height="2.5dp"/>
                </LinearLayout>




                <com.whinc.widget.ratingbar.RatingBar
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    app:rb_max_count="5"
                    app:rb_count="0"
                    app:rb_empty="@drawable/empty"
                    app:rb_fill="@drawable/fill"
                    app:rb_space="5dp" />



                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/solid_black"
                    android:layout_marginLeft="19.6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rating"
                    android:text=""
                    android:layout_marginRight="10dp"
                    android:id="@+id/value"
                    android:textSize="18dp"
                    />
                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/solid_black"
                    android:layout_marginLeft="19.6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/value"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:id="@+id/date"
                    android:textSize="18dp"
                    />

                <LinearLayout
                    android:layout_below="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="14dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="23dp"
                            android:layout_marginLeft="21dp"
                            android:background="@drawable/ic_down_arrow"/>

                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terms"
                            android:layout_marginLeft="19.6dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="Address From"
                            android:id="@+id/start_address"
                            android:textSize="17dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/agreed"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:paddingBottom="14dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="21dp"
                            android:background="@drawable/red_circle"/>

                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terms"
                            android:layout_marginLeft="19.6dp"
                            android:layout_gravity="center_vertical"
                            android:text="Address to"
                            android:layout_marginRight="10dp"
                            android:id="@+id/end_address"
                            android:textSize="17dp"
                            />
                    </LinearLayout>


                    <com.example.drivermedambulance.Widget.Atami_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/terms"
                        android:layout_marginTop="26dp"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/trip"
                        android:textSize="17dp"
                        />
                    <LinearLayout
                        android:layout_below="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="2.5dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/agreed">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:background="@color/red"
                            android:layout_height="2.5dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">


                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terms"
                            android:text="@string/Estimate"
                            android:textSize="17dp"
                            />

                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:id="@+id/estimatePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Rs 300"
                            android:textColor="@color/blue_accept"
                            android:textSize="17dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terms"
                            android:layout_gravity="left"
                            android:text="@string/Distance"
                            android:textSize="17dp"
                            />

                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8km"
                            android:id="@+id/distance"
                            android:textColor="@color/blue_accept"
                            android:layout_alignParentRight="true"
                            android:textSize="17dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:orientation="horizontal">


                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terms"
                            android:text="@string/mobile_no"
                            android:textSize="17dp"
                            />

                        <com.example.drivermedambulance.Widget.Atami_Regular
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_accept"
                            android:text="0.75km"
                            android:id="@+id/distance_from_customer"
                            android:textSize="17dp" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>