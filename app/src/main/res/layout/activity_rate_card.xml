<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileback"
    tools:context=".Activity.RateCard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/tool_rel"
                android:elevation="5dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="54dp">

                <LinearLayout
                    android:id="@+id/openDrawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:paddingLeft="21dp">

                    <View
                        android:layout_width="13dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/menu_line"/>
                    <View
                        android:layout_width="19dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/menu_line"/>
                    <View
                        android:layout_width="16dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/menu_line"/>


                </LinearLayout>

                <com.example.respondermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textColor="@color/black2"
                    android:textSize="18dp"/>


                <ImageView
                    android:layout_width="15.9dp"
                    android:layout_height="17dp"
                    android:id="@+id/bell_tool"
                    android:src="@drawable/turn_off"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>


            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingLeft="11dp">

                <ImageView
                    android:id="@+id/texi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/texi_image"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/texi"
                    android:orientation="vertical">
                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/country_arrays"
                        android:prompt="@string/selectcatgre" />
                </LinearLayout>
            </RelativeLayout>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="67dp"
               app:cardCornerRadius="2dp"
               android:elevation="3dp"
               android:layout_margin="7dp">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="18dp"
                   android:layout_gravity="center_vertical">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_vertical"
                       android:src="@drawable/ic_hospital"/>

                   <com.example.respondermedambulance.Widget.Atami_Regular
                       android:layout_width="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black2"
                       android:text="@string/ALS"
                       android:layout_gravity="center_vertical"
                       />
               </LinearLayout>



           </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_margin="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">
                    
                    <com.example.respondermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black2"
                        android:textSize="16dp"
                        android:text="@string/Totalfare"
                       />

                    <com.example.respondermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_height="wrap_content"
                        android:text="@string/plainText"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="3dp"
                android:layout_margin="7dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <com.example.respondermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black2"
                        android:textSize="16dp"
                        android:text="@string/extracharge"
                        />

                    <com.example.respondermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_height="wrap_content"
                        android:text="@string/plainText"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>