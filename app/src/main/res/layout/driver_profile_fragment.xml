<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="27dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:id="@+id/profile_image"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/circular_layout">
            </de.hdodenhof.circleimageview.CircleImageView>













            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="75dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:layout_marginLeft="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/tint"/>

                    <com.example.drivermedambulance.Widget.Atami_regular_EditText
                        android:id="@+id/name_update_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/YourName"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>



                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/agreed"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile"
                        android:layout_marginLeft="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/tint"/>

                    <com.example.drivermedambulance.Widget.Atami_regular_EditText
                        android:id="@+id/mobile_update_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:maxLength="10"
                        android:inputType="number"
                        android:hint="@string/mobile"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>

                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/agreed"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginLeft="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/tint"/>

                    <com.example.drivermedambulance.Widget.Atami_regular_EditText
                        android:id="@+id/emai_update_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/email"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>

                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/agreed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">



                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setpws"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/tint"/>

                    <com.example.drivermedambulance.Widget.Atami_regular_EditText
                        android:id="@+id/password_update_div"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/passeword"
                        android:inputType="textPassword"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/update_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

    </Button>
</RelativeLayout>