<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_maps_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <RelativeLayout
            android:id="@+id/tool_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/openDrawer"
                android:layout_width="15.9dp"
                android:layout_height="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/menu2" />

            <ImageButton
                android:id="@+id/bell_tool"
                android:layout_width="15.9dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_bell" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tool_rel"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_hospital" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/green_dot"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:background="@drawable/green_dot" />

                        <com.example.respondermedambulance.Widget.Atami_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/pickup"
                            android:textColor="@color/pickupcolor"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/source_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="14dp"
                        android:background="#ffffff"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textColor="#7e7e7f"
                        android:textSize="12dp"


                        />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit"
            android:orientation="vertical"
            android:paddingLeft="56dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/red_dot"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="14dp"
                            android:background="@drawable/red_dot" />

                        <com.example.respondermedambulance.Widget.Atami_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/drop"
                            android:textColor="@color/dropcolor"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/destination_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="14dp"
                        android:background="#ffffff"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textColor="#7e7e7f"
                        android:textSize="12dp">

                    </EditText>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/edit2"
            android:focusable="true"
            android:focusableInTouchMode="true">


            <fragment
                android:id="@+id/driver_map_main"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Activity.DriversMapsActivity">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.switchmaterial.SwitchMaterial

                        android:id="@+id/location_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:shadowColor="@color/red">

                    </com.google.android.material.switchmaterial.SwitchMaterial>

                    <LinearLayout
                        android:id="@+id/notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location_switch"
                        android:layout_margin="20dp"
                        android:background="@drawable/one_side_color"
                        android:orientation="vertical"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="15dp"
                        android:visibility="gone">

                        <com.example.respondermedambulance.Widget.Atami_Bold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 New Requests!"
                            android:textSize="13sp">

                        </com.example.respondermedambulance.Widget.Atami_Bold>

                        <com.example.respondermedambulance.Widget.Atami_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please Accept or Decline it!"
                            android:textSize="13sp">

                        </com.example.respondermedambulance.Widget.Atami_Regular>

                    </LinearLayout>

                </RelativeLayout>


            </fragment>


            <LinearLayout
                android:id="@+id/btnBookNow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="198dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:visibility="gone">


                <Button
                    android:id="@+id/btnBookNow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/filedHeight"
                    android:layout_marginLeft="@dimen/leftMergin"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/RightMergin"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/red"
                    android:text="@string/Book"
                    android:textAllCaps="false"
                    android:textColor="@color/white"></Button>

            </LinearLayout>


