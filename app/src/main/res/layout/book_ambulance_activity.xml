<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BookAmbulance">

    <RelativeLayout
        android:id="@+id/tool_rel"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingLeft="21dp">

            <View
                android:layout_width="13dp"
                android:layout_height="2dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/menu_line"/>
            <View
                android:layout_width="19dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/menu_line"/>
            <View
                android:layout_width="16dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/menu_line"/>


        </LinearLayout>
        <ImageButton
            android:layout_width="15.9dp"
            android:layout_height="16dp"
            android:id="@+id/bell_tool"
            android:src="@drawable/ic_bell"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/edit"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tool_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_hospital"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/green_dot"/>

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="@string/pickup"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/pickupcolor"/>

            </LinearLayout>

                <com.example.drivermedambulance.Widget.Atami_regular_EditText
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:padding="5dp"
                    android:layout_marginLeft="19dp"
                    android:textSize="12dp"
                    android:layout_marginRight="14dp"
                    android:layout_height="30dp"/>

        </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/edit2"
        android:layout_below="@id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="56dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/red_dot"/>

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/drop"
                        android:textSize="14dp"
                        android:textColor="@color/dropcolor"/>

                </LinearLayout>

                <com.example.drivermedambulance.Widget.Atami_regular_EditText
                    android:layout_width="match_parent"
                    android:textColor="@color/pickupcolor"
                    android:inputType="text"
                    android:padding="5dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="14dp"
                    android:layout_height="30dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

     <fragment
        android:id="@+id/map"
        android:layout_below="@id/edit2"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:layout_marginTop="198dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_als"
                android:layout_width="@dimen/cardW"
                android:layout_height="@dimen/cardH">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="23.5dp"
                        android:layout_height="16.5dp"
                        android:src="@drawable/ic_ambulance"/>

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:id="@+id/text_als"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingTop="3dp"
                        android:textSize="9dp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/cardW"
                android:id="@+id/card_bls"
                android:layout_height="@dimen/cardH"
                android:layout_marginLeft="@dimen/h5"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="23.5dp"
                        android:layout_height="16.5dp"
                        android:src="@drawable/ic_ambulance_1"/>

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:id="@+id/text_bls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="9dp"
                        android:paddingTop="3dp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_marginLeft="@dimen/h5"
                android:layout_width="@dimen/cardW"
                android:id="@+id/card_dbt"
                android:layout_height="@dimen/cardH">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="23.5dp"
                        android:layout_height="16.5dp"
                        android:src="@drawable/ic_ambulance_2"/>

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:id="@+id/text_dbt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:textColor="@color/black"
                        android:textSize="9dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/cardW"
                android:id="@+id/card_pvt"
                android:layout_height="@dimen/cardH"
                android:layout_marginLeft="@dimen/h5">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="23.5dp"
                        android:layout_height="16.5dp"
                        android:src="@drawable/ic_ambulance_3"/>

                    <com.example.drivermedambulance.Widget.Atami_Regular
                        android:id="@+id/text_pvt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingTop="3dp"
                        android:textSize="9dp"
                        />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/filedHeight"
            android:text="@string/Book"
            android:textAllCaps="false"
            android:id="@+id/book_now"
            android:backgroundTint="@color/red"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/RightMergin"
            android:layout_marginLeft="@dimen/leftMergin"
            android:textColor="@color/white"
            android:background="@drawable/button_border">
        </Button>

    </LinearLayout>



</RelativeLayout>


