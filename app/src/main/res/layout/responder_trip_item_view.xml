<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/bg"
        android:paddingTop="25dp">

        <ImageView
            android:id="@+id/amb"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/responder"/>
        <RelativeLayout
            android:id="@+id/date_lay"
            android:layout_toRightOf="@id/amb"
            android:paddingLeft="8.8dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="25 feb 2020"
                android:textColor="@color/black2"
                android:textSize="16dp" />

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rate"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:text="300 Rs"
                android:textColor="@color/black2"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/date_lay"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45.8dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:id="@+id/ambu_type"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black2"
                    android:text="ALS Type,"/>

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_id"
                    android:textColor="@color/black2"
                    android:text="Booking ID"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:id="@+id/green_dot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/green_dot"/>


                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/start_address"
                    android:textColor="@color/terms"
                    android:text="Start Address"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/red_dot"/>

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/terms"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/hospital_address"
                    android:text="Hospital Address"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/responder"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>


</RelativeLayout>