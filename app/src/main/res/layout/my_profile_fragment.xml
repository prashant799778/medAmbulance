<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="27dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.MedAmbulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:layout_marginLeft="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/tint"/>

                    <com.MedAmbulance.Widget.Atami_regular_EditText
                        android:id="@+id/name_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/YourName"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>



                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/agreed"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.MedAmbulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mobile"
                        android:layout_marginLeft="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/tint"/>

                    <com.MedAmbulance.Widget.Atami_regular_EditText
                        android:id="@+id/mobile_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:maxLength="10"
                        android:inputType="number"
                        android:layout_marginTop="10dp"
                        android:hint="@string/mobile"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>

                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/agreed"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.MedAmbulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_marginLeft="16dp"
                        android:textSize="12dp"
                        android:textColor="@color/tint"/>

                    <com.MedAmbulance.Widget.Atami_regular_EditText
                        android:id="@+id/emai_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/email"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>

                </LinearLayout>


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="16dp"
                android:background="@color/agreed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">



                    <com.MedAmbulance.Widget.Atami_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setpws"
                        android:layout_marginLeft="16dp"
                        android:textSize="16dp"
                        android:textColor="@color/tint"/>

                    <com.MedAmbulance.Widget.Atami_regular_EditText
                        android:id="@+id/password_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="@string/passeword"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="@color/tint"/>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/update_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/save"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true">

    </Button>

</RelativeLayout>