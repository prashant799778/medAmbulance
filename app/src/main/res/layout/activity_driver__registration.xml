<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Driver_Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/red"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="355dp">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:scaleType="centerInside"
                android:src="@drawable/registration">
            </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:id="@+id/driverLicence"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="@dimen/leftMergin"
                android:layout_marginRight="@dimen/RightMergin"
                android:layout_height="50dp">
                <ImageView
                    android:layout_weight="1.1"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background">
                </ImageView>
                <com.example.respondermedambulance.Widget.Atami_Regular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:text="@string/DriverLicence">
                </com.example.respondermedambulance.Widget.Atami_Regular>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15dp"
                        >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:id="@+id/personalId"
                android:layout_marginLeft="@dimen/leftMergin"
                android:layout_marginRight="@dimen/RightMergin"
                android:layout_height="50dp">
                <ImageView
                    android:layout_weight="1.1"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background">
                </ImageView>
                <com.example.respondermedambulance.Widget.Atami_Regular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:text="@string/PersonalId">
                </com.example.respondermedambulance.Widget.Atami_Regular>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15dp"
                        >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:id="@+id/ambulanceRegistration"
                android:layout_marginLeft="@dimen/leftMergin"
                android:layout_marginRight="@dimen/RightMergin"
                android:layout_height="50dp">
                <ImageView
                    android:layout_weight="1.1"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background">
                </ImageView>
                <com.example.respondermedambulance.Widget.Atami_Regular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:text="@string/Vechicle_Regiistration">
                </com.example.respondermedambulance.Widget.Atami_Regular>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/arrow3"
                        android:layout_width="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15dp"
                        >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>