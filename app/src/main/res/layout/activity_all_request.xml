<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <RelativeLayout
        android:id="@+id/tool_rel"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">


        <ImageButton
            android:padding="30dp"
            android:layout_width="15.9dp"
            android:layout_height="16dp"
            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"/>


        <com.example.drivermedambulance.Widget.Atami_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="@string/all_request"
            android:textAlignment="center"
             android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            >

        </com.example.drivermedambulance.Widget.Atami_Regular>

        <ImageButton
            android:layout_width="15.9dp"
            android:layout_height="16dp"
            android:id="@+id/bell_tool"
            android:src="@drawable/ic_bell"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id ="@+id/notification"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:layout_margin="20dp"

        android:layout_below="@id/tool_rel"
        android:orientation="vertical"
        android:background="@drawable/one_side_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.example.drivermedambulance.Widget.Atami_Bold
            android:text="3 New Requests!"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.example.drivermedambulance.Widget.Atami_Bold>
        <com.example.drivermedambulance.Widget.Atami_Regular
            android:text="Please Accept or Decline it!"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.example.drivermedambulance.Widget.Atami_Regular>

    </LinearLayout>

     <LinearLayout
         android:layout_below="@id/notification"
         android:layout_margin="10dp"

         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/rc_view"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

         </androidx.recyclerview.widget.RecyclerView>

     </LinearLayout>


</RelativeLayout>

