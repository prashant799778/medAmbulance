<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/accept_decline_layout"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_margin="16dp"
        android:paddingBottom="27dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/up_arrow_to_close"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@drawable/down_arrow"
            android:layout_alignParentRight="true"
            />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circular_layout"
        android:layout_centerHorizontal="true"/>

    <com.example.drivermedambulance.Widget.Atami_Bold
        android:id="@+id/user_name"
        android:layout_below="@+id/user_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/terms"
        android:text="UserName"
        android:layout_marginTop="7dp"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        />

    <LinearLayout
        android:id="@+id/red_line"
        android:layout_below="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/agreed"
        android:layout_marginTop="31dp">

        <LinearLayout
            android:layout_width="45dp"
            android:background="@color/red"
            android:layout_height="2.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/red_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="21dp"
                android:background="@drawable/down_arrow"/>

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:layout_marginLeft="19.6dp"
                android:layout_gravity="center_vertical"
                android:text=""
                android:id="@+id/start_address"
                android:textSize="17dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="16dp"
            android:background="@color/agreed"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="21dp"
                android:background="@drawable/red_circle"/>

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:layout_marginLeft="19.6dp"
                android:layout_gravity="center_vertical"
                android:text=""
                android:id="@+id/end_address"
                android:textSize="17dp"
                />
        </LinearLayout>


        <com.example.drivermedambulance.Widget.Atami_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/terms"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:text="@string/trip"
            android:textSize="17dp"
            />
        <LinearLayout
            android:layout_below="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:background="@color/agreed">

            <LinearLayout
                android:layout_width="80dp"
                android:background="@color/red"
                android:layout_height="2.5dp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:text="@string/Estimate"
                android:textSize="17dp"
                />

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/rate"
                android:textColor="@color/blue_accept"
                android:layout_alignParentRight="true"
                android:textSize="17dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:layout_gravity="left"
                android:text="@string/Distance"
                android:textSize="17dp"
                />

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/blue_accept"
                android:layout_alignParentRight="true"
                android:id="@+id/distance"
                android:textSize="17dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">


            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:text="@string/Estimate2"
                android:textSize="17dp"
                />

            <com.example.drivermedambulance.Widget.Atami_Regular
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textColor="@color/blue_accept"
                android:text=""
                android:textSize="17dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/agreed"/>
        <RelativeLayout
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="58dp"
                android:id="@+id/endRide"
                android:background="@drawable/pickup_bbk"
                android:gravity="center">

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/end"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_marginLeft="18dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/call"
                android:layout_alignParentRight="true"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:gravity="center"
                android:background="@drawable/call_bbk">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cursor"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
</RelativeLayout>