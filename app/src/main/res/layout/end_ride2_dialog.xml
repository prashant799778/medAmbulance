<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        android:paddingRight="16dp"
        android:layout_margin="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="27dp">
        <ImageView
            android:id="@+id/up_arrow_to_open"
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:background="@drawable/up_arrow"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:id="@+id/user_pic_name"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_layout" />

            <com.example.drivermedambulance.Widget.Atami_Bold
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/terms"
                android:text="UserName"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:textSize="24dp"
                android:layout_marginLeft="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/line5"
            android:layout_below="@+id/user_pic_name"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="16dp"
            android:background="@color/agreed">

            <LinearLayout
                android:layout_width="80dp"
                android:background="@color/red"
                android:layout_height="2.5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/line5"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="58dp"
                android:background="@drawable/pickup_bbk"
                android:gravity="center">

                <com.example.drivermedambulance.Widget.Atami_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@string/end"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_marginLeft="18dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/end"
                android:layout_alignParentRight="true"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:gravity="center"
                android:background="@drawable/call_bbk">

                <ImageView
                    android:id="@+id/end_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cursor"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>