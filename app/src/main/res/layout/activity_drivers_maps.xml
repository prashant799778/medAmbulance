            tools:context=".Activity.DriversMapsActivity" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <com.google.android.material.switchmaterial.SwitchMaterial

                  android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:id="@+id/location_switch"



                    >

                </com.google.android.material.switchmaterial.SwitchMaterial>

                <LinearLayout
                    android:visibility="gone"
                    android:id ="@+id/notification"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="30dp"
                    android:layout_margin="20dp"

                    android:layout_below="@id/location_switch"
                    android:orientation="vertical"
                    android:background="@drawable/one_side_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.MedAmbulance.Widget.Atami_Bold
                        android:text="3 New Requests!"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.MedAmbulance.Widget.Atami_Bold>
                    <com.MedAmbulance.Widget.Atami_Regular
                        android:text="Please Accept or Decline it!"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.MedAmbulance.Widget.Atami_Regular>

                </LinearLayout>

            </RelativeLayout>



        </fragment>





